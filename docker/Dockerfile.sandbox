FROM node:20-alpine

# Install essential tools
RUN apk add --no-cache \
    git \
    python3 \
    py3-pip \
    go \
    make \
    gcc \
    g++ \
    && rm -rf /var/cache/apk/*

# Create workspace directory
WORKDIR /workspace

# Set environment
ENV HOME=/root
ENV NPM_CONFIG_PREFIX=/root/.npm-global
ENV PATH=$PATH:/root/.npm-global/bin

# Default command (will be overridden)
CMD ["sleep", "infinity"]
